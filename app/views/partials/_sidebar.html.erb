<aside class="tbk-sidebar" id="sidebar-desk" data-controller="sidebar"
       data-sidebar-target="sidebar"> 
    <div class="toogle-btn-container">
        <button class="tbk-toggle-btn" id="toggle-sidebar-btn" data-action="sidebar#toggleSidebar"
                data-sidebar-target="toggleButton"> 
            &lt;
        </button>
    </div>

    <nav class="sidebar-content" id="sidebar-content" data-sidebar-target="sidebarContent">
        <div>
            <p class="tbk-sidebar-item-title">Webpay Plus</p>
