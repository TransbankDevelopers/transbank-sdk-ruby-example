                            data-action="sidebar#toggleCollapsible" data-sidebar-target="collapsibleTitle">
                        <span class="general-text">Webpay Plus</span>
                        <%= image_tag 't-arrow.svg', class: 'arrow', alt: 't-arrow', width: 24, height: 24, data: { sidebar_target: "arrow" } %>
                    </button>
                    <ul class="collapsible-content" id="collapse-webpay-plus" data-sidebar-target="collapsibleContent">
                        <li class="collapsible-items">
                            <a href="<%= webpay_plus_create_path %>" class="tbk-sidebar-item" data-sidebar-target="sidebarItem">
                                Flujo Completo
                            </a>
                        </li>
                    </ul>
                </li>
              
                <li style="margin-bottom:20px;">
                    <button class="sidebar-collapsible-title" data-collapsible="webpay-plus-mall"
